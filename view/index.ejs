<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/index.css">
    <title>Fimaly - SV3</title>
</head>
<body>
    <div class="container" style="padding-bottom: 50px;">
        <div style="text-align: center;">
            <p class="title" style="font-size: 23px;
            font-weight: 600;
            margin-bottom: 39px;"><%= title %></p>

            <div style="display: flex; justify-content: center;">
                <div>
                    <div style="    word-wrap: break-word;
                    width: 618px;
                    text-align: left;
                    line-height: 27px;">
                        <p>Thông báo: <i><%= note %></i></p>
                    </div>
                    <p><%= last %></p>
                    <table class="m-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên nhân vật</th>
                                <th>Chức vụ</th>
                                <th>Điểm cống hiến</th>
                                <th>Điểm cống hiến tuần</th>
                                <th>Quyên góp</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < users.length; i++) { %>
                                <tr>
                                    <td style="text-align: center;"><%= i + 1 %></td>
                                    <td><%= users[i].name %></td>
                                    <td><%= (users[i].position == 1 || users[i].position == '1')? 'Thần hủy diêt' : (users[i].position == 2 || users[i].position == '2')? 'Thiên sứ': (users[i].position == 3 || users[i].position == '3') ? 'Thần sáng tạo' : 'Thành viên'  %></td>
                                    <td style="text-align: center;"><%= users[i].scorce %></td>
                                    <td style="text-align: center;"><%= users[i].weekScore %></td>
                                    <td><%= users[i].ballz %> Ballz</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
            </div>
            
        </div>

    </div>
</body>
</html>