<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/index.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Fimaly - SV3</title>
</head>
<body>
    <div class="container" style="padding-bottom: 50px;">
        <div style="text-align: center;">
            <p class="title" style="font-size: 23px;
            font-weight: 600;
            margin-bottom: 39px;"><input type="text" id="input-title" value="<%= title %>" style="width: 300px;
    padding: 5px;"/></p>

            <div style="display: flex; justify-content: center;">
                <div>
                    <div style="    word-wrap: break-word;
                    width: 618px;
                    text-align: left;
                    line-height: 27px;">
                        <p>Thông báo: <textarea id="input-note" rows="5" cols="50" style="line-height: 30px;"><%= note %></textarea></p>
                    </div>
                    <table class="m-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên nhân vật</th>
                                <th>Chức vụ</th>
                                <th>Điểm cống hiến</th>
                                <th>Điểm cống hiến tuần</th>
                                <th>Quyên góp</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="my-tbody">
                            <% for(let i = 0; i < users.length; i++) { %>
                                <tr id="<%= i+1 %>">
                                    <td style="text-align: center;">
                                        <input type="number" dtyle="width: 50px;" class="stt" value="<%= users[i].stt %>"/>
                                    </td>
                                    <td><span class="username"><%= users[i].name %></span></td>
                                    <td>
                                        <select class="position" value="<%= users[i].position %>" selected>
                                            <% if(users[i].position == 1 || users[i].position == "1") { %>
                                                <option value="1" selected>Thần hủy diệt</option>
                                            <% } else { %>
                                                <option value="1" >Thần hủy diệt</option>
                                            <% } %>
                                            <% if(users[i].position == 2 || users[i].position == '2') { %>
                                                <option value="2" selected>Thiên sứt</option>
                                            <% } else { %>
                                                <option value="2" >Thiên sứ</option>
                                            <% } %>
                                            <% if(users[i].position == 3 || users[i].position == '3') { %>
                                                <option value="3" selected>Thần sáng tạo</option>
                                            <% } else { %>
                                                <option value="3" >Thần sáng tạo</option>
                                            <% } %>
                                            <% if(users[i].position == 4 || users[i].position == '4') { %>
                                                <option value="4" selected>Thành viên</option>
                                            <% } else { %>
                                                <option value="4" >Thành viên</option>
                                            <% } %>
                                        </select>
                                    </td>
                                    <td style="text-align: center;">
                                        <input class="scorce" type="number"  value="<%= parseInt(users[i].scorce) %>"/>
                                    </td>
                                    <td style="text-align: center;">
                                        <input class="weekScorce" type="number"  value="<%= parseInt(users[i].weekScore) %>"/>
                                    </td>
                                    <td>
                                        <input class="ball" type="number"  value="<%= users[i].ballz %>"/>
                                    </td>
                                    <td>
                                        <button onclick="deleteItem(<%= i+1 %>)">Xóa</button>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
            </div>
            <button id="btn" >Lưu</button>
            <button id="btn-add" >Thêm mới</button>
        </div>
        
    </div>
    <script>
        // let user = <%- JSON.stringify(users) %>;
        // console.log('users ',user);
        function check() {
            let button = document.getElementById('btn');
            button.addEventListener('click', () => {
               let usernames = document.getElementsByClassName('username');
               let positions = document.getElementsByClassName('position');
               let scorces = document.getElementsByClassName('scorce');
               let balls = document.getElementsByClassName('ball');
               let users = [];
               if (usernames && usernames.length) {
                   for (let i = 0; i < usernames.length; i++) {
                    let obj = {
                           name: usernames[i].innerHTML || usernames[i].innerText || username.value,
                           position: positions[i].value,
                           scorce: scorces[i].value,
                           ballz: balls[i].value
                       }
                       users.push(obj);
                   }
               }
               console.log('user ',users);
            })
            
        }
        function deleteItem(index) {
            index = parseInt(index);
            $("#"+index).remove();
        }
        $(document).ready(function(){
            let usernames = document.getElementsByClassName('username');
            let count = usernames.length;
            $("#btn-add").click(function(){
                console.log('click');
                let item = `
                    <tr id=${count + 1}>
                        <td style="text-align: center;"><input type="number" dtyle="width: 50px;" class="stt" value="${count + 1}"/></td>
                        <td><input type="text" class="username" /></td>
                        <td>
                            <select class="position">
                                <option value="1" >Thần hủy diệt</option>
                                <option value="2" >Thiên sứ</option>
                                <option value="3" >Thần sáng tạo</option>
                                <option value="4" selected>Thành viên</option>
                            </select>
                        </td>
                        <td style="text-align: center;"><input type="number" class="scorce" /></td>
                        <td style="text-align: center;"><input type="number" class="weekScorce" /></td>
                        <td><input type="number" class="ball" /></td>
                        <td>
                            <button onclick="deleteItem(${count + 1})">Xóa</button>   
                        </td>
                    </tr>
                `;
                count = count +1;
                $(".my-tbody").append(item);
            });
            $('#btn').click(() => {
                let stt = document.getElementsByClassName('stt');
                let usernames = document.getElementsByClassName('username');
                let positions = document.getElementsByClassName('position');
                let scorces = document.getElementsByClassName('scorce');
                let weekScorces = document.getElementsByClassName('weekScorce');
                let balls = document.getElementsByClassName('ball');
                let users = [];
                if (usernames && usernames.length) {
                    for (let i = 0; i < usernames.length; i++) {
                        let obj = {
                            stt: parseInt(stt[i].value),
                            name: usernames[i].innerHTML || usernames[i].innerText || usernames[i].value,
                            position: parseInt(positions[i].value),
                            scorce: parseInt(scorces[i].value),
                            weekScore: parseInt(weekScorces[i].value),
                            ballz: parseInt(balls[i].value)
                        }
                        users.push(obj);
                    }
                }
                //users = JSON.stringify(users);
                let title = $('#input-title').val();
                let note = $('#input-note').val();
                let postData = {
                    title,
                    note,
                    users: JSON.stringify(users)
                };
                $.post("/update", postData, function(result){
                    if (result.status) {
                        window.location.href="/";
                    }
                });
            });
            
        });
        //window.onload = check;
    </script>
</body>
</html>